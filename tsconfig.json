{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"include": ["src/**/*"],
	"exclude": ["node_modules/*", "__sapper__/*", "public/*"],
	"compilerOptions": {
		"esModuleInterop": true,
		"importsNotUsedAsValues": "remove",
		"types": [
			"svelte",
			"svelte/store",
			"svelte/motion",
			"svelte/transition",
			"svelte/animate",
			"svelte/easing"
		],
		"baseUrl": ".",
		"paths": {
			"src": ["src"]
		}
	}
}
